@model IList<PingBot.Models.Client>

@foreach (var client in Model)
{
<div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
    <div class="panel panel-default card-view pa-0">
        <div class="panel-wrapper collapse in">
            <div class="panel-body pa-0">
                <div class='sm-data-box @(client.IsUp ? "bg-green" : "bg-red")'>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-6 text-center pl-0 pr-0 data-wrap-left">
                                <span class="txt-light block counter"><span class="counter-anim">@client.IpAddress</span></span>
                                <span class="weight-500 uppercase-font txt-light block">@client.Name<br>@client.Provider</span>
                            </div>
                            <div class="col-xs-6 text-center  pl-0 pr-0 data-wrap-right">
                                <i class="zmdi @(client.IsUp ? "zmdi-devices" : "zmdi-devices-off") txt-light data-right-rep-icon"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}